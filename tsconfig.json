{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES6", 
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src",
    "paths": {
      "src": ["./src/"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
}